{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_recipe_details'|trans({'%id%': recipe.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_recipe_details'|trans({'%id%': recipe.id|default('')}) }}</h1>
    {% if recipe is defined and recipe|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ recipe.id }}</dd>
            <dt>{{ 'label_category'|trans }}</dt>
            <dd>{{  recipe.category.title }}</dd>
            <dt>{{ 'label_title'|trans }}</dt>
            <dd>{{  recipe.title }}</dd>
            <dt>{{ 'label_content'|trans }}</dt>
            <dd>{{  recipe.content }}</dd>
            <dt>{{ 'tags'|trans }}</dt>
            <dd>
                {% for tag in recipe.tags %}
                    <span>{{ tag.title }}</span>
                {% endfor %}
            </dd>
        </dl>

            {% if form is defined %}
            <div class="container">
                <h5>{{ 'title_comment_new'|trans }}</h5>
                {{ form_start(form, { method: 'POST', action: url('comment_create', {id: recipe.getId()}) }) }}
                {{ form_widget(form) }}
                <div class="form-group row float-sm-right">
                    <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
                </div>
                    {{ form_end(form) }}
            </div>
            {% endif %}


        <p>
            <a href="{{ url('recipe_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'action_back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}